@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
    ViewData["Title"] = "Menu Page";
    string bannerImg = "/images/banners/banner" + @ViewData["BannerNr"] + ".jpg";
}
<style>
    .centered{
        top: 50%;
        left: 50%;
        margin: 20vh 25% auto 25%;
    }
    .centered img{
        width: 45%;
    }
</style>
<header>
    <img src=@bannerImg runat=server width="100%" />
</header>

<div class = "centered">
    <a asp-controller="Info" asp-action="ListRaces" >
        <img src="~/images/banners/races.png"/>
    </a>
    <a asp-controller="Info" asp-action="ListTeams" >
        <img src="~/images/banners/teams.png"/>
    </a>
    <a asp-controller="Info" asp-action="ListRiders" >
        <img src="~/images/banners/riders.png"/>
    </a>
    <a asp-controller="Shop" asp-action="OrderTicket">
        <img src="~/images/banners/tickets.png" />
    </a>
</div>